<div class="container">
	<div class="card card-body">
		<h3>Share Outfit</h3>
		<form action="/outfit/addOutfit" method="post" id="addOutfit">
			<div class="row">
				<div class="col-lg-3">
					{{!-- File upload --}}
					<input type="file" id="posterUpload" name="posterUpload" accept="image/png, image/jpeg, image/jpg, image/gif">
					
					{{!-- Poster image --}}
					<img src="/img/no-image.jpg" alt="" id="poster" class="border img-thumbnail img-fluid" style="height: 95%; width: 100%;">
					
					{{!-- Hidden error message --}}
					<div class="font-weight-bold text-danger small" id="posterErr" style="display: none;"></div>
					
					{{!-- Hidden field to submit URL of poster to the server --}}
					<input type="hidden" id="posterURL" name="posterURL">
				</div>
			</div>
			<br>
			<br>
			<div class="form-group">
				<div class="row">
					<div class="col-12 col-sm-12 col-md-6 col-lg-6">
						<label class="font-italic">Share to Zalora Public Page?</label>
						<br>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="no" value="0" name="public" checked>
							<label class="form-check-label" for="no">No</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" id="yes" value="1" name="public">
							<label class="form-check-label" for="yes">Yes</label>
						</div>
					</div>
				</div>

			</div>

			<br>
			<button id="butAddOutfit" type="submit" class="btn btn-primary">Share
			</button>
		</form>
	</div>
</div>
